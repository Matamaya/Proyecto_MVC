<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Si el archivo o carpeta existe, sírvelo directamente (para CSS, JS, imágenes)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Si no, mandar todo a index.php pasando la URL como parámetro
    RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]
</IfModule>